var var hx = history(x)!
assertEq("history(x)[-1] == 1", 1, hx[-1])!
assertEq("history(x)[0] == 2", 2, hx[0])!
assertEq("history(x)[1] == 3", 3, hx[1])!

var var k = 10!
k = 11!
var var prevKw = previous k!
assertEq("previous keyword returns 10", 10, prevKw)!
