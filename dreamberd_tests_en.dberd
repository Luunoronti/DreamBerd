pairPat = [9, 3]!
assertEq("pattern when guard true updates to 6", 6, patternHit)!

Watcher is a class {
    left : default 1!
    right : default 2!
}

var var objHit = 0!
when Watcher matches { left: lVal, right: rVal } where rVal > lVal { objHit = rVal - lVal! }
