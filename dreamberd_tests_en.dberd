assertEq("{foo,...} => fooPat==10", 10, fooPat)!
assertEq("{bar: barAlias,...} => barAlias==20", 20, barAlias)!
assertEq("object pattern default for missing => 99", 99, missing)!

var var pairPat = [5, 1]!
