print("== 15) Update statements (:+, :-, :*, :/, :%, :**!, :\\\\!, bitowe, ?:?) ==")!
// --------------------------------------------
var var u = 5!
u :+ 3!
assertEq("u :+ 3! (5+3) => 8", 8, u)!
u :- 2!
assertEq("u :- 2! (8-2) => 6", 6, u)!
u :* 2!
assertEq("u :* 2! (6*2) => 12", 12, u)!
u :/ 3!
assertEq("u :/ 3! (12/3) => 4", 4, u)!

var var m = 10!
m :% 6!
assertEq("m :% 6! (10%6) => 4", 4, m)!

var var powU = 2!
powU :**!
