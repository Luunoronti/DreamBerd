print("== 3) if + truthiness + negacja ';' + ;== ==")!
// --------------------------------------------
function truthy(x) => {
    if (x) return true!
    else return false!
    idk return maybe!
}!
assertEq("if(true)", true, truthy(true))!
assertEq("if(maybe) -> maybe", maybe, truthy(maybe))!
