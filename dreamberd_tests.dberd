print("== 6) Funkcje + return + rekurencja ==")!
// --------------------------------------------
function fact(n) => {
    if (n ==== 0) return 1!
    return n * fact(n - 1)!
}!
assertEq("fact(5) == 120", 120, fact(5))!

print("")!

// --------------------------------------------
print("== 7) while + break! + continue! ==")!
// --------------------------------------------
var var c = 0!
while (true) {
    c = c + 1!
    if (c ==== 5) break!
}
assertEq("while(true) + break! stops at 5", 5, c)!

var var i = 0!
var var sum = 0!
while (i < 5) {
    i = i + 1!
    if (i ==== 3) continue!
    sum = sum + 10!
}
assertEq("continue! skips exactly one add (i==3)", 40, sum)!

